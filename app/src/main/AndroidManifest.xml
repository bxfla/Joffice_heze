<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartbus.heze">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SET_PROCESS_LIMIT" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_welcome"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_welcome"
        android:supportsRtl="true"
        android:theme="@style/NoAction">
        <activity android:name=".welcome.activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".welcome.activity.LoginActivity" />
        <activity android:name=".main.activity.MainActivity" />
        <activity android:name=".main.notice.activity.NoticeDetailActivity" />
        <activity android:name=".main.notice.activity.NoticeListActivity" />
        <activity android:name=".fileapprove.FileMainActivity" />
        <activity
            android:name=".fileapprove.activity.DepartBudgetActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".fileapprove.activity.BorrowAccidentActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name=".fileapprove.activity.DepartmentActivity">
        </activity>
    </application>

</manifest>