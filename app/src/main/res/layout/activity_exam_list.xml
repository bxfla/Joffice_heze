<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smartbus.heze.exam.ExamListActivity">

    <com.smartbus.heze.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="@string/exam_list">
    </com.smartbus.heze.http.views.Header>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb1"
                style="@style/RadionButton"
                android:drawableTop="@drawable/rb1"
                android:text="@string/learn_data" />

            <RadioButton
                android:id="@+id/rb2"
                style="@style/RadionButton"
                android:drawableTop="@drawable/rb2"
                android:text="@string/online_exam" />
            <RadioButton
                android:id="@+id/rb3"
                style="@style/RadionButton"
                android:drawableTop="@drawable/rb3"
                android:text="@string/found_exam" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb4"
                style="@style/RadionButton"
                android:drawableTop="@drawable/rb4"
                android:text="@string/simulate_exam" />

            <RadioButton
                android:id="@+id/rb5"
                style="@style/RadionButton"
                android:drawableTop="@drawable/rb5"
                android:text="@string/income_rank" />
            <RadioButton
                android:id="@+id/rb6"
                style="@style/RadionButton"
                android:drawableTop="@drawable/rb6"
                android:text="@string/class_mileage" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
